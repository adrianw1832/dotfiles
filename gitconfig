[user]
  name = Adrian Wong
  email = awong@thoughtworks.com
[core]
  autocrlf = input
  editor = nvim
  excludesfile = ~/.gitignore
  ignorecase = false
  safecrlf = false
[push]
  default = upstream
  followTags = true

[pretty]
  graph = %C(dim yellow)%h%C(reset) - %C(dim green)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n          %C(bold white)%s%C(reset) %C(bold black)- %an%C(reset)
  log = %C(dim)%C(yellow)%h %C(red)| %<(11,trunc)%C(bold)%C(black)%an%C(reset) %C(red)| %C(green)%ad%  %C(red)|%C(reset) %s %C(auto)%d
  reflog = %C(dim)%C(yellow)%h %C(red)| %>(9,trunc)%C(bold)%C(black)%gd%C(reset) %C(red)| %<(22,trunc)%C(green)%ad%  %C(red)|%C(reset) %C(bold)%C(green)%>(12,trunc)%cr%C(reset) %C(red)|%C(reset) %gs

[alias]
  ctags = !.git/hooks/ctags
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
  trustExitCode = true

[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -c "Gdiff" "$MERGED"
[merge]
  tool = fugitive
  keepbackup=false
[mergetool "fugitive"]
  prompt = false
  cmd = nvim -c "Gdiff" "$MERGED"

[color]
  ui = true
[color "branch"]
  current = white bold reverse
  local = yellow
  remote = green
[color "status"]
  added = green bold
  changed = yellow bold
  nobranch = red white bold
  untracked = red bold
  updated = green
[color "diff"]
  commit = yellow
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  plain = white
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[credential]
  helper = osxkeychain
[init]
  templatedir = ~/.git_template
