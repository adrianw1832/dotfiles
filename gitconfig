[user]
  name = Adrian Wong
  email = awong@thoughtworks.com
[core]
  autocrlf = input
  editor = nvim
  excludesfile = /Users/awong/.gitignore
  ignorecase = false
  safecrlf = false
[pager]
  diff = diff-so-fancy | less -FRS --pattern '^(commit|added:|deleted:|modified:) '
  show = diff-so-fancy | less -FRS --pattern '^(commit|added:|deleted:|modified:) '

[alias]
  type = cat-file -t
  dump = cat-file -p
  ctags = !.git/hooks/ctags
[push]
  default = upstream
  followTags = true
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
  trustExitCode = true

[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE -c '$wincmd w' -c 'wincmd L'
[merge]
  summary = true
  verbosity = 1
  tool = fugitive
[mergetool]
  prompt = false
[mergetool "fugitive"]
  cmd = nvim -d $LOCAL $MERGED $REMOTE -c '$wincmd w' -c 'wincmd L'
  keepbackup=false

[color]
  ui = true
[color "branch"]
  current = white reverse
  local = yellow
  remote = green
[color "status"]
  added = green bold
  changed = yellow bold
  nobranch = red white bold
  untracked = red bold
[color "diff"]
  commit = yellow bold
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  plain = white
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[credential]
  helper = osxkeychain
[init]
  templatedir = ~/.git_template
